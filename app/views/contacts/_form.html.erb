<%= form_for @contact do |f| %>
  <div class="form-group">
    <%= f.label "*姓名" %>:
    <%= f.text_field :name, class: "form-control" %><br />

    <%= f.label "生日" %>:
    <%= f.date_field :birthday, class: "form-control" %><br />

    <%= f.label "電話" %>:
    <%= f.text_field :phone, class: "form-control" %><br />

    <%= f.label "地址" %>:
    <%= f.text_field :address, class: "form-control" %><br />

    <%= f.label "備註" %>:
    <%= f.text_area :remark, class: "form-control" %><br />
  </div>

  <%= f.submit "確認", data: {disable_with: '確認中...'}, class: "btn btn-primary"%>
<% end %>