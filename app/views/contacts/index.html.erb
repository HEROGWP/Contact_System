<div class="col-md-12">
  <div class="group">
    <%= link_to("下載名單", contacts_path(format: "csv"), class: "btn btn-success pull-left" ) %>
    <%= link_to("新的名單", new_contact_path, class: "btn btn-primary pull-right" ) %>
  </div>
  
  <table class="table table-hover table-striped">
    <thead>
      <tr> 
        <th width= 10px> # </th>
        <th> 名字 </th>
        <th> 生日 </th>
        <th> 電話 </th>
        <th> 地址 </th>
        <th> 備註 </th>
      </tr>
    </thead>
    <tbody>
      <% @contact_pages.each do |contact| %>
        <tr>
          <td width= 10px> # </td>
          <td><%= link_to(contact.name, contact_path(contact))  %></td>
          <td><%= contact.birthday  %></td>
          <td><%= contact.phone  %></td>
          <td><%= contact.address  %></td>
          <td><%= contact.remark %></td>
          <td>
            <%=link_to("", edit_contact_path(contact), class: "btn btn-sm btn-info glyphicon glyphicon-pencil")%>
            <%= link_to("", contact_path(contact), method: :delete, data: {confirm: "你確定嗎？刪錯要重打歐！！！" }, class: "btn btn-sm btn-danger glyphicon glyphicon-trash") %>
            
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @contact_pages, :previous_label => '←上一頁', :next_label => '下一頁→', renderer: BootstrapPagination::Rails %>
</div>