<div class="col-md-12">  
  <%= form_tag("/birthday", method: "get", data: { turboform: ''}, class: "center") do %>
<!--     <%# while @i<12 %>
  	  <label class="checkbox-inline">
        <%= check_box_tag(@month,@i)%>@i
      </label>
    <%# end %> -->

    <%#
 		# a = [1, 2, 3, 4, 5]
 		# a = {1 => true, 2 => true, 3 = > true}
    %>
    <div class="btn-group" role="group" aria-label="...">
	    <% (1..12).each do |month| %>
	    	<%= check_box_tag("mons[#{month}]", 1, params[:mons].has_key?(month.to_s), class: 'hide') %>
        <% if month == 10 || month == 11 || month == 12%>
          <% re_month = month.to_s %>
        <% else %>
          <% re_month = "0" + month.to_s %>
        <% end %>


	    	<% if params[:mons].has_key?(month.to_s) %>
	    		<button type="button" class="btn btn-primary btn-month "><%= re_month %></button>
	    	<% else %>
	    		<button type="button" class="btn btn-default btn-month "><%= re_month %></button>
	    	<% end %>
        <% if re_month == "06"%>
          <br>
        <% end %>
	    <% end %>
    </div>
  <% end %>


  <table class="table table-hover table-striped">
    <thead>
      <tr> 
        <th width= 10px> # </th>
        <th> 名字 </th>
        <th> 生日 </th>
        <th> 電話 </th>
        <th> 地址 </th>
        <th> 備註 </th>
      </tr>
    </thead>
    <tbody>
      <% @birthday.each do |contact| %>
        <tr>
          <td width= 10px> # </td>
          <td><%= contact.name  %></td>
          <td><%= contact.birthday  %></td>
          <td><%= contact.phone  %></td>
          <td><%= contact.address  %></td>
          <td><%= contact.remark %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= will_paginate @birthday,:previous_label => '←上一頁', :next_label => '下一頁→', renderer: BootstrapPagination::Rails %>

</div>

<%= javascript_include_tag 'birthday' %>